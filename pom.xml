				<artifactId>maven-dependency-plugin</artifactId> <version>2.4</version> <executions> 
				<execution> <id>copy-clover-plugins</id> <phase>validate</phase> <goals> 
				<goal>copy</goal> </goals> <configuration> <overWriteReleases>true</overWriteReleases> 
				<overWriteSnapshots>true</overWriteSnapshots> <overWriteIfNewer>true</overWriteIfNewer> 
				<stripVersion>true</stripVersion> <outputDirectory>${project.build.testOutputDirectory}</outputDirectory> 
				<artifactItems> <artifactItem> <groupId>com.cloveretl</groupId> <artifactId>cloveretl-engine</artifactId> 
				<version>${mule.version}</version> <type>zip</type> </artifactItem> </artifactItems> 
				</configuration> </execution> </executions> </plugin> <plugin> <artifactId>maven-antrun-plugin</artifactId> 
				<version>1.7</version> <executions> <execution> <phase>compile</phase> <configuration> 
				<tasks> <!- Using an ant task to deflate cloveretl-engine.zip -> <unzip dest="${project.build.testOutputDirectory}" 
				src="${project.build.testOutputDirectory}/cloveretl-engine.zip" /> </tasks> 
				</configuration> <goals> <goal>run</goal> </goals> </execution> </executions> 
				</plugin> -->
			<!-- for fl3x: to compile Java 1.7 source -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.3</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
			<!-- for fl3x: add the bundled proprietary (non-Maven repo) jars to the 
				app zip -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>add-db2-jars</id>
						<phase>package</phase>
						<configuration>
							<tasks>
								<zip destfile="${project.build.directory}/${project.build.finalName}.zip" update="true">
									<zipfileset dir="${project.basedir}/lib" prefix="lib"/>
								</zip>
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
					<execution>
						<id>mule-deploy</id>
						<phase>pre-integration-test</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<sshexec host="52.4.200.89" trust="true" failonerror="true" username="mule" password="mule" command="rm -rf /opt/mule/apps/order-api* ;rm -rf /tmp/order-api* "/>
								<scp failonerror="true" file="${project.build.directory}/${build.finalName}.zip" todir="mule:mule@52.4.200.89:/tmp" trust="true"></scp>
								<sshexec host="52.4.200.89" failonerror="true" username="mule" password="mule" command="cp /tmp/order-api* /opt/mule/apps"/>
								
							</tasks>
						</configuration>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>ant</groupId>
						<artifactId>ant-jsch</artifactId>
						<version>1.6.5</version>
					</dependency>
					<dependency>
						<groupId>com.jcraft</groupId>
						<artifactId>jsch</artifactId>
						<version>0.1.42</version>
					</dependency>
				</dependencies>
			</plugin>
			<!-- added for fl3x to deploy using the REST plugin -->
			<!-- <plugin> <groupId>org.mule.tools</groupId> <artifactId>mule-mmc-rest-plugin</artifactId> 
				<version>1.3.4</version> <executions> <execution> <id>mule-deploy</id> <phase>pre-integration-test</phase> 
				<goals> <goal>deploy</goal> </goals> <configuration> <goalPrefix>mule-mmc-rest</goalPrefix> 
				<muleApiUrl>${mmc.url}</muleApiUrl> <name>${project.artifactId}</name> <username>${mmc.username}</username> 
				<password>${mmc.password}</password> <appDirectory>${project.basedir}/src/main/app</appDirectory> 
				<finalName>${project.artifactId}-${project.version}</finalName> <version>${project.version}</version> 
				<domain>${mmc.deploy.domain}</domain> <serverGroup>${mmc.serverGroup}</serverGroup> 
				<fileNamePattern>regex:^.*mule-config.xml$</fileNamePattern> <propToReplace>fl3x.env.deploytime</propToReplace> 
				<clusterName>${mmc.clusterName}</clusterName> <skip>${skip.deploy.ciserver}</skip> 
				</configuration> </execution> </executions> </plugin> -->

			<!-- plugin added for soap ui testing -->
			<plugin>
				<groupId>com.github.redfish4ktc.soapui</groupId>
				<artifactId>maven-soapui-extension-plugin</artifactId>
				<version>4.6.4.2</version>
				<configuration>
					<projectFile>${soapui.projectFile}</projectFile>
					<skip>${skip.soapui.test}</skip>
					<projectProperties>
						<projectProperty>ENDPOINT_HOSTNAME=${soapui.endpoint.hostname}</projectProperty>
						<projectProperty>ENDPOINT_USERNAME=${soapui.endpoint.username}</projectProperty>
						<projectProperty>ENDPOINT_PASSWORD=${soapui.endpoint.password}</projectProperty>
					</projectProperties>
				</configuration>
				<executions>
					<execution>
						<phase>integration-test</phase>
						<goals>
							<goal>test</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-install-plugin</artifactId>
				<version>2.3.1</version>
			</plugin>
			<!-- plugin added for maven release for the artefact -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.5</version>
				<dependencies>
					<dependency>
						<groupId>org.apache.maven.scm</groupId>
						<artifactId>maven-scm-provider-gitexe</artifactId>
						<version>1.9.1</version>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>
	</build>

