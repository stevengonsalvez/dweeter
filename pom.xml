			<groupId>org.mule.transports</groupId>
			<artifactId>mule-transport-jdbc</artifactId>
			<version>${mule.version}</version>
			<scope>provided</scope>
		</dependency>
		<!-- for fl3x: don't need EE-version of JDBC but CE version included immediately 
			above: <dependency> <groupId>com.mulesoft.muleesb.transports</groupId> <artifactId>mule-transport-jdbc-ee</artifactId> 
